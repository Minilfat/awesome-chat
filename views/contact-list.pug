extends layout
include ./contact
include ./message

block content
    div(class="col-sm-12 main")
        div(class="col-sm-2 left-panel")
            div(class="contact-list-panel")
                -var names=['Lidiya', 'Zakir', 'Zufar', 'Ilfat', 'Marat']
                each name in names
                    +contact(name)
        div(class="col-sm-9 inline chats-body")
            -var names=['Lidiya', 'Zakir', 'Zufar', 'Ilfat', 'Marat']
            each name in names
                +contact(name)
        div(class="message-send col-sm-8 form-group")
            textarea(type="text" class="form-control col-sm-5" id="send-message-text")

